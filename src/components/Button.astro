---
// Click button, get confetti!
// Styled by Tailwind :)
const {color} = Astro.props;
const darkerColor = color.slice(0,-3) + (Number(color.slice(-3)) + 200);
// console.log({darkerColor})
// const tailClass = `py-2 px-4 ${color} text-stone-900 font-semibold rounded-lg shadow-md hover:bg-stone-300 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75`;
const tailClass = `w-32 py-2 px-2 ${color} text-stone-900 font-semibold rounded-lg hover:${darkerColor}`;
---

<button
	class={tailClass}
>
	<slot />
</button>

